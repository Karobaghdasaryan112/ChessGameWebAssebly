{
  "openapi": "3.0.1",
  "info": {
    "title": "ChessService.API.ChessGameAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/ChessGame/accept": {
      "post": {
        "tags": [
          "ChessGame"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BoardInitializeRequestDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BoardInitializeRequestDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BoardInitializeRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/ChessGame/move": {
      "post": {
        "tags": [
          "ChessGame"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubmitMoveRequestDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SubmitMoveRequestDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SubmitMoveRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BoardInitializeRequestDTO": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "integer",
            "format": "int32"
          },
          "player1Id": {
            "type": "string",
            "nullable": true
          },
          "player2Id": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "HorizontalOrientation": {
        "enum": [
          0,
          1,
          2,
          3,
          4,
          5,
          6,
          7,
          8
        ],
        "type": "integer",
        "format": "int32"
      },
      "Position": {
        "type": "object",
        "properties": {
          "verticalOrientation": {
            "$ref": "#/components/schemas/VerticalOrientation"
          },
          "horizontalOrientation": {
            "$ref": "#/components/schemas/HorizontalOrientation"
          }
        },
        "additionalProperties": false
      },
      "SubmitMoveRequestDTO": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "integer",
            "format": "int32"
          },
          "currentPosition": {
            "$ref": "#/components/schemas/Position"
          },
          "movePosition": {
            "$ref": "#/components/schemas/Position"
          },
          "player": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "VerticalOrientation": {
        "enum": [
          0,
          1,
          2,
          3,
          4,
          5,
          6,
          7
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
}